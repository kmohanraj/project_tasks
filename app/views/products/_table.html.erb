<div class="table_invoice">

  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr class="bg-primary">
        <th class='align_center'>Project Title</th>
        <th class='align_center'>User Name</th>
        <th class='align_center'>Category Name</th>
        <!-- <th class="align_center"><%#= link_to "Project Title", :sort => "name" %></th> -->
        <!-- <th class="align_center"><%#= link_to "User Name", :sort => "user_id" %></th> -->
        <!-- <th class="align_center"><%#= link_to "Category Name", :sort => "category_id" %> -->
      </tr>
    </thead>
    <tbody>
      <% for product in @products%>
      <tr>
        <td class="align_center">
          <%= product.name%>
        </td>
        <td class="align_center">
          <%= product.user.email %>
        </td>
        <td class="align_center">
          <%= product.category.name%>
        </td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>
