<style type="text/css">
  .form{
        width: 828px;
    max-width: 100%;
    padding-left: 40%;
  }
</style>

<div class="form">
  <h3>Sign Up</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :email , class: "col-4 col-form-label"%><br />
        <%= f.email_field :email, autofocus: true, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary'  %>
      </div>
    <% end %>

    <div class="log">
       <%= link_to 'Log In', new_user_session_path %>
    </div>

</div>

